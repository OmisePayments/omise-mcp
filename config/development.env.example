# Development Environment Configuration
# Copy this file to development.env and fill in your actual values
# Usage: cp config/development.env.example config/development.env

NODE_ENV=development
PORT=3000
HOST=localhost

# ============================================================================
# Omise API Configuration (REQUIRED)
# ============================================================================
# Get your test API keys from: https://dashboard.omise.co/test/api-keys
OMISE_PUBLIC_KEY=pkey_test_your_public_key_here
OMISE_SECRET_KEY=skey_test_your_secret_key_here
OMISE_ENVIRONMENT=test
OMISE_API_VERSION=2019-05-29
OMISE_BASE_URL=https://api.omise.co
OMISE_VAULT_URL=https://vault.omise.co
OMISE_TIMEOUT=30000
OMISE_RETRY_ATTEMPTS=3
OMISE_RETRY_DELAY=1000

# ============================================================================
# Tool Access Control Configuration (REQUIRED)
# ============================================================================
# Set which tools are allowed (comma-separated list or 'all')
# For development, 'all' is recommended for full access
# For production, specify exact tools: create_charge,retrieve_charge,list_charges
TOOLS=all

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_NAME=omise-mcp-server-dev
SERVER_VERSION=1.0.0
SERVER_DESCRIPTION=MCP Server for Omise Payment Integration (Development)

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=debug
LOG_FORMAT=simple
LOG_REQUESTS=true
LOG_RESPONSES=true

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Database Configuration (Optional)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# Monitoring Configuration (Optional)
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ============================================================================
# Security Configuration
# ============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# ============================================================================
# Development Specific
# ============================================================================
DEBUG=true
HOT_RELOAD=true
MOCK_API=false
