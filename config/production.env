# Production Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================================================
# Omise API Configuration
# ============================================================================
OMISE_PUBLIC_KEY=pkey_live_xxxxxxxxxxxxxxxx
OMISE_SECRET_KEY=skey_live_xxxxxxxxxxxxxxxx
OMISE_ENVIRONMENT=production
OMISE_API_VERSION=2017-11-02
OMISE_BASE_URL=https://api.omise.co
OMISE_TIMEOUT=30000
OMISE_RETRY_ATTEMPTS=3
OMISE_RETRY_DELAY=1000

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_NAME=omise-mcp-server
SERVER_VERSION=1.0.0
SERVER_DESCRIPTION=MCP Server for Omise Payment Integration

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_REQUESTS=false
LOG_RESPONSES=false

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Database Configuration
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# ============================================================================
# Monitoring Configuration
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ============================================================================
# Security Configuration
# ============================================================================
CORS_ORIGIN=https://omise-mcp-server.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# ============================================================================
# Production Specific
# ============================================================================
DEBUG=false
HOT_RELOAD=false
MOCK_API=false

# ============================================================================
# Performance Configuration
# ============================================================================
NODE_OPTIONS=--max-old-space-size=512
UV_THREADPOOL_SIZE=16
