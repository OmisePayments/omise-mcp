# Staging Environment Configuration
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# ============================================================================
# Omise API Configuration
# ============================================================================
OMISE_PUBLIC_KEY=pkey_test_xxxxxxxxxxxxxxxx
OMISE_SECRET_KEY=skey_test_xxxxxxxxxxxxxxxx
OMISE_ENVIRONMENT=test
OMISE_API_VERSION=2017-11-02
OMISE_BASE_URL=https://api.omise.co
OMISE_TIMEOUT=30000
OMISE_RETRY_ATTEMPTS=3
OMISE_RETRY_DELAY=1000

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_NAME=omise-mcp-server-staging
SERVER_VERSION=1.0.0
SERVER_DESCRIPTION=MCP Server for Omise Payment Integration (Staging)

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_REQUESTS=true
LOG_RESPONSES=false

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Database Configuration
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# ============================================================================
# Monitoring Configuration
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ============================================================================
# Security Configuration
# ============================================================================
CORS_ORIGIN=https://staging.omise-mcp-server.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# ============================================================================
# Staging Specific
# ============================================================================
DEBUG=false
HOT_RELOAD=false
MOCK_API=false
