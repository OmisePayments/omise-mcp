# Staging Environment Configuration
# Copy this file to staging.env and fill in your actual values
# Usage: cp config/staging.env.example config/staging.env

NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# ============================================================================
# Omise API Configuration (REQUIRED)
# ============================================================================
# For staging: Use TEST API keys with production-like settings
# Get your test API keys from: https://dashboard.omise.co/test/api-keys
OMISE_PUBLIC_KEY=pkey_test_your_public_key_here
OMISE_SECRET_KEY=skey_test_your_secret_key_here
OMISE_ENVIRONMENT=test
OMISE_API_VERSION=2019-05-29
OMISE_BASE_URL=https://api.omise.co
OMISE_VAULT_URL=https://vault.omise.co
OMISE_TIMEOUT=30000
OMISE_RETRY_ATTEMPTS=3
OMISE_RETRY_DELAY=1000

# ============================================================================
# Tool Access Control Configuration (REQUIRED)
# ============================================================================
# For staging: Use specific tools to match production setup
# Example: TOOLS=create_charge,retrieve_charge,list_charges,create_customer,create_refund
TOOLS=create_charge,retrieve_charge,list_charges,create_customer,list_customers,retrieve_customer,create_refund

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_NAME=omise-mcp-server-staging
SERVER_VERSION=1.0.0
SERVER_DESCRIPTION=MCP Server for Omise Payment Integration (Staging)

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_REQUESTS=true
LOG_RESPONSES=false

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Database Configuration (Optional)
# ============================================================================
REDIS_URL=redis://redis-staging:6379
REDIS_PASSWORD=your_staging_redis_password_here

# ============================================================================
# Monitoring Configuration (Optional)
# ============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# ============================================================================
# Security Configuration
# ============================================================================
CORS_ORIGIN=https://staging.yourdomain.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# ============================================================================
# Staging Specific
# ============================================================================
DEBUG=false
HOT_RELOAD=false
MOCK_API=false
